extends ../main_layout
block head
    title #{title}
    link(rel="stylesheet", href="/stylesheets/style.css")
block content
    h1 #{title}
    div.container.col-lg-8.col-lg-offset-2
        form.form-horizontal(action="/projects", method="post")
            div.form-group
                label.col-lg-2.control-label Title
                input(type="text", class="form-control", id="title", placeholder="Project's title", name="project_title")
            div.form-group
                label.col-lg-2.control-label Description
                textarea.form-control(name="project_description")
            button.btn.btn-default(type="submit") Submit