extends ../main_layout
block head
    title #{title}
    link(rel="stylesheet", href="/stylesheets/style.css")
block content
    div.new
        h1 #{title}
        form.form-horizontal(action=projectTipsPath(project_id), method="post")
            div.form-group
                label.control-label Title
                input(type="text", class="form-control input-lg", id="title", placeholder="Title", name="title")
            div.form-group
                label.control-label Tags (Separe them by , )
                input(type="text", class="form-control input-lg", id="tags", placeholder="Tags", name="tags")
            div.form-group
                label.control-label Tip
                textarea.form-control(name="tip", rows="20")
            button.btn.btn-primary.pull-right(type="submit", class="input-lg") Submit