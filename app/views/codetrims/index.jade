extends ../main_layout
block head
    title #{title}
    link(rel="stylesheet", href="/stylesheets/style.css")
block content
    div.index
        h1 #{title}
            a.pull-right(href=newCodetrimPath()) + New
        div.codetrims
        each codetrimObject in results
            div.codetrim
                div.views #{codetrimObject.views}
                div.codetrim-description
                    div.title
                        h3
                            a(href=codetrimPath(codetrimObject.id)) #{codetrimObject.title}
